<?xml version="1.0" encoding="UTF-8" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <xacro:property name="wheel_separation" value="0.45" />
    <xacro:property name="wheel_radius" value="0.1" />
    <xacro:property name="caster_wheel_radius" value="0.06" />

    <xacro:property name="base_length" value="0.9" />
    <xacro:property name="base_width" value="0.67" />
    <xacro:property name="base_height" value="0.27" />

    <xacro:macro name="wheel_link" params="prefix">
        <link name="${prefix}_wheel_link">
            <visual>
                <origin xyz="0.1 -0.02 -0.1" rpy="1.5708 0 3.1416"/>
                <geometry>
                    <mesh filename="/home/fasta/Projects/Genesis/meshes/wheel.STL" scale="0.001 0.001 0.001"/>
                </geometry>
                <material name="wheel_grey" />
            </visual>
            <collision>
                <!-- <origin xyz="0.1 -0.02 -0.1" rpy="1.5708 0 3.1416"/> -->
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <!-- <mesh filename="package://mobile_robot_description/meshes/wheel.STL" scale="0.001 0.001 0.001"/> -->
                    <sphere radius="${wheel_radius}" />
                </geometry>
            </collision>
            <inertial>
                <mass value="2.0"/>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.02"/>
            </inertial>
        </link>
    </xacro:macro>

    <xacro:macro name="caster_wheel" params="prefix">
        <link name="${prefix}_caster_wheel">
            <visual>
                <geometry>
                    <sphere radius="${caster_wheel_radius}" />
                </geometry>
                <material name="gray" />
                <origin xyz="0 0 0" rpy="0 0 0" />
            </visual>
            <collision>
                <geometry>
                    <sphere radius="${caster_wheel_radius}" />
                </geometry>
                <origin xyz="0 0 0" rpy="0 0 0" />
            </collision>
            <xacro:sphere_inertial mass="0.25" radius="${caster_wheel_radius}" origin_xyz="0 0 0" origin_rpy="0 0 0"/>
        </link>
    </xacro:macro>

    <link name="base_footprint"/>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </joint>

    <link name="base_link">
        <visual>
            <origin xyz="3.2 -0.32 0.0" rpy="1.5708 0.0 3.1416"/>
            <geometry>
                <mesh filename="/home/fasta/Projects/Genesis/meshes/chasis.STL" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="chassis_grey" />
        </visual>
        <collision>
            <!-- <origin xyz="3.2 -0.32 0.0" rpy="1.5708 0.0 3.1416"/> -->
            <origin xyz="0.0 0.01 0.14" rpy="0.0 0.0 0.0"/>
            <geometry>
                <!-- <mesh filename="package://mobile_robot_description/meshes/chasis.STL" scale="0.001 0.001 0.001"/> -->
                <box size="${base_length} ${base_width} ${base_height}"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="20.0"/>
            <origin xyz="0 0 0.1325" rpy="0 0 0"/>
            <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.5" iyz="0" izz="2.0"/>
        </inertial>
    </link>

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="0.0 0.23 0.05" rpy="0 0 0"/>
        <axis xyz="0 1 0" />
    </joint>

    <xacro:wheel_link prefix="left" />

    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="0.0 -0.23 0.05" rpy="0 0 0"/>
        <axis xyz="0 1 0" />
    </joint>

    <xacro:wheel_link prefix="right" />

    <joint name="base_rear_left_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="rear_left_caster_wheel" />
        <origin xyz="-0.3 0.2 0.0105" rpy="0 0 0"/>
    </joint>

    <xacro:caster_wheel prefix="rear_left"/>

    <joint name="base_rear_right_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="rear_right_caster_wheel" />
        <origin xyz="-0.3 -0.2 0.0105" rpy="0 0 0"/>
    </joint>

    <xacro:caster_wheel prefix="rear_right"/>

    <joint name="base_front_left_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="front_left_caster_wheel" />
        <origin xyz="0.3 0.2 0.0105" rpy="0 0 0"/>
    </joint>

    <xacro:caster_wheel prefix="front_left"/>

    <joint name="base_front_right_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="front_right_caster_wheel" />
        <origin xyz="0.3 -0.2 0.0105" rpy="0 0 0"/>
    </joint>

    <xacro:caster_wheel prefix="front_right"/>

</robot>